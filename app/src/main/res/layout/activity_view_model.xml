<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModelActivity">

    <TextView
        android:id="@+id/text_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_text"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:textSize="@dimen/textcounter_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_textcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increment_text"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:textSize="@dimen/textcounter_size"
        android:onClick="increment"
        app:layout_constraintEnd_toEndOf="@+id/text_counter"
        app:layout_constraintStart_toStartOf="@+id/text_counter"
        app:layout_constraintTop_toBottomOf="@+id/text_counter"
        tools:ignore="UsingOnClickInXml" />
</androidx.constraintlayout.widget.ConstraintLayout>