<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoShowerActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_photoshower"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        tools:listitem="@layout/layout_photoshower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_photoshower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="changeData"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,UsingOnClickInXml"
        android:src="@drawable/ic_add"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>